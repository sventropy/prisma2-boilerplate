{
  "name": "example",
  "private": true,
  "version": "0.0.0",
  "main": "dist/main.ts",
  "scripts": {
    "lint": "prettier 'src/**/*'",
    "lint:fix": "prettier --write 'src/**/*'",
    "start": "ts-node-dev --tree-kill --no-notify --respawn --transpile-only src/main.ts",
    "start:prod": "ts-node --transpile-only src/main.ts",
    "migrate": "npx prisma2 migrate save --experimental -c && prisma2 migrate up --experimental -c",
    "generate": "npx -s generate:prisma && npx -s generate:nexus",
    "generate:prisma": "npx prisma2 generate",
    "generate:nexus": "NODE_ENV=development ts-node --transpile-only src/schema",
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^2.0.0-previewnull-1",
    "graphql": "^14.3.1",
    "graphql-yoga": "^1.18.2",
    "nexus": "^0.12.0-rc.13",
    "nexus-prisma": "^0.11.1"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.3",
    "@types/faker": "^4.1.5",
    "@types/ws": "^7.2.0",
    "faker": "^4.1.0",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  }
}
